{
  "name": "pto-optimizer",
  "version": "1.0.0",
  "description": "Maximize your vacation days by finding optimal PTO usage around holidays",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "deploy": "wrangler pages deploy .svelte-kit/cloudflare",
    "cf-typegen": "wrangler types"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-cloudflare": "^4.0.0",
    "@sveltejs/kit": "^2.15.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.10.2",
    "@vitest/browser": "^4.0.15",
    "drizzle-kit": "^0.30.1",
    "playwright": "^1.57.0",
    "svelte": "^5.16.0",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vitest": "^4.0.15",
    "vitest-browser-svelte": "^2.0.1",
    "wrangler": "^3.99.0"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.3"
  },
  "license": "MIT",
  "author": "PTO Optimizer",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pto-optimizer"
  },
  "keywords": [
    "pto",
    "vacation",
    "holiday",
    "optimizer",
    "time-off",
    "calendar"
  ]
}
